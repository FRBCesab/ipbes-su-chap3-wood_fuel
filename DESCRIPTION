Package: ipbes.su.chap3.wood.fuel
Type: Package
Title: IPBES Sustainable Use Assessment - Figure Chapter 3 - Wood fuel
Version: 1.0.0
Authors@R: c(
    person(given   = "Nicolas",
           family  = "Casajus",
           role    = c("aut", "cre"),
           email   = "nicolas.casajus@fondationbiodiversite.fr",
